<div class="container">
<p>
  <h1>
  <%= @post.title %></h1>
  (Posted <%= time_ago_in_words(@post.created_at) %> ago.)<br>
</p><br>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p><br><%= link_to 'Back', posts_path %>
| <%= link_to 'Edit Post', edit_post_path(@post) %><br><br><br>

<h2>Comments</h2>
<%= render @post.comments %><br><br>

<h2>Add a comment:</h2>
<%= render "comments/form" %>


</div>