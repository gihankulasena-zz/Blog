
  <div class="container">

<div class="container">
    <header class="jumbotron subhead" id="overview">
  <div class="center hero-unit">
    <h1>Listing all the posts</h1>
    </div>
</header>

<p  align="center" class= "btn btn-large btn-primary"><%= link_to 'New post', new_post_path %></p><br><br><br><br><br><br>

 
  
    
 
<% @posts.each do |post| %>
  <p><strong><%= post.title %></strong> <br></p>
    <p><strong>Post :</strong><%= post.text %><br></p><br>
    <p><%= link_to 'Show', post_path(post) %> | 
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></p>
   <hr>
<% end %>


  </div>
  </body></html>